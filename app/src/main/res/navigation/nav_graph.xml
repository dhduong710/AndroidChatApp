<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.hustchat.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_messagesFragment"
            app:destination="@id/messagesFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.hustchat.ui.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.hustchat.ui.MessagesFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_messages" />
        <action
            android:id="@+id/action_messagesFragment_to_addFriend"
            app:destination="@id/addFriendFragment" />
        <action
            android:id="@+id/action_messagesFragment_to_createGroup"
            app:destination="@id/createGroupFragment" />

    <fragment
        android:id="@+id/meFragment"
        android:name="com.example.hustchat.ui.MeFragment"
        android:label="Me"
        tools:layout="@layout/fragment_me" />

    <fragment
        android:id="@+id/addFriendFragment"
        android:name="com.example.hustchat.ui.AddFriendFragment"
        android:label="Add friends" />

    <fragment
        android:id="@+id/createGroupFragment"
        android:name="com.example.hustchat.ui.CreateGroupFragment"
        android:label="Create Group" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.hustchat.ui.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat"/>

    <action
        android:id="@+id/action_messagesFragment_to_chatFragment"
        app:destination="@id/chatFragment" />
</navigation>